files:
  "/etc/nginx/conf.d/https_redirect.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      server {
          listen 80;
          server_name _;

          # Exact match for /health/ path
          location = /health/ {
              return 200;
          }

          # For all other requests, redirect to HTTPS
          location / {
              return 301 https://$host$request_uri;
          }
      }
